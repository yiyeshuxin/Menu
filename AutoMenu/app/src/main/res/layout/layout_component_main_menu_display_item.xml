<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/display_item_image"
        android:background="@mipmap/am_bg_display_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#88000000"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/display_item_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/am_ic_food"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/display_item_name"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:text="回家" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/display_item_sub_name"
                android:textSize="12dp"
                android:textColor="@android:color/white"
                android:text="距离:10km 时间:20分钟"/>

        </LinearLayout>


    </LinearLayout>

